all: encoder decoder

encoder: encoder.o libstr.so
	gcc -o encoder encoder.o -L. -lstr -Wl,-rpath,.

decoder: decoder.o libstr.so
	gcc -o decoder decoder.o -L. -lstr -Wl,-rpath,.
	
encoder.o: encoder.c
	gcc -c encoder.c -std=c99

decoder.o: decoder.c
	gcc -c decoder.c -std=c99
	
libstr.so: stringutils.o
	gcc -shared -o libstr.so stringutils.o
	
stringutils.o: stringutils.c
	gcc -c -fPIC stringutils.c -std=c99
	
clean:
	rm -rf *.o *.so encoder decoder