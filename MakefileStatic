all: encoder decoder

encoder: encoder.o libstr.a
	gcc -o encoder encoder.o -L. -lstr 

decoder: decoder.o libstr.a
	gcc -o decoder decoder.o -L. -lstr
	
encoder.o: encoder.c
	gcc -c encoder.c

decoder.o: decoder.c
	gcc -c decoder.c
	
libstr.a: stringutils.o
	ar cr libstr.a stringutils.o
	
stringutils.o: stringutils.c
	gcc -c stringutils.c
	
clean:
	rm -rf *.o *.a encoder decoder